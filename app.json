{
  "expo": {
    "name": "Oasis App",
    "slug": "oasis-app",
    "version": "1.0.0",
    "owner": "aboahj",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b141a"
    },
    "assetBundlePatterns": ["**/*"],
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "sounds": ["./assets/ringtone.wav"]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "اسمح لواحة Oasis بالوصول إلى صورك."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "نحتاج للوصول للميكروفون."
        }
      ],
      "@zegocloud/zego-uikit-prebuilt-call-rn",
      "@zegocloud/zego-uikit-signaling-plugin-rn"
    ],
    "android": {
      "package": "com.oasis.app2026",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "ACCESS_WIFI_STATE",
        "ACCESS_NETWORK_STATE",
        "INTERNET",
        "POST_NOTIFICATIONS",
        "WAKE_LOCK",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "blockControlPanel": true
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oasis.app2026",
      "infoPlist": {
        "NSCameraUsageDescription": "نحتاج للكاميرا للمكالمات.",
        "NSMicrophoneUsageDescription": "نحتاج للميكروفون للمكالمات.",
        "NSPhotoLibraryUsageDescription": "نحتاج للوصول للصور.",
        "UIBackgroundModes": ["voip", "audio", "fetch"]
      }
    },
    "extra": {
      "eas": {
        "projectId": "742d678c-90bd-4cf1-b261-604691b3cf53"
      }
    }
  }
}
