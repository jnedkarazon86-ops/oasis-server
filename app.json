{
  "expo": {
    "name": "Oasis App",
    "slug": "oasis-app",
    "version": "1.0.0",
    "owner": "aboahj",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b141a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "يسمح لك التطبيق باختيار الصور ومقاطع الفيديو لمشاركتها مع أصدقائك.",
          "cameraPermission": "يسمح لك التطبيق باستخدام الكاميرا لالتقاط الصور وإجراء مكالمات الفيديو."
        }
      ],
      [
        "react-native-webview",
        {}
      ]
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0b141a"
      },
      "package": "com.oasis.app2026",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "ACCESS_WIFI_STATE",
        "ACCESS_NETWORK_STATE",
        "USE_FULL_SCREEN_INTENT",
        "SCHEDULE_EXACT_ALARM",
        "VIBRATE",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "DISABLE_KEYGUARD",
        "INTERNET",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": {
            "scheme": "https"
          },
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oasis.app2026",
      "infoPlist": {
        "NSCameraUsageDescription": "نحتاج للوصول للكاميرا لإجراء مكالمات الفيديو والتقاط الصور.",
        "NSMicrophoneUsageDescription": "نحتاج للوصول للميكروفون لإجراء المكالمات الصوتية وتسجيل الفيديوهات.",
        "NSPhotoLibraryUsageDescription": "نحتاج للوصول لمكتبة الصور لتتمكن من إرسال الصور ومقاطع الفيديو."
      }
    },
    "extra": {
      "eas": {
        "projectId": "742d678c-90bd-4cf1-b261-604691b3cf53"
      }
    }
  }
}
